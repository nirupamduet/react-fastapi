{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI (Uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/.venv/Scripts/uvicorn.exe",
      "args": [
        "app.main:app",
        "--reload",
        "--port",
        "8888"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}